{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "firestore": {
      "port": 6767
    },
    "ui": {
      "enabled": true,
      "port": 6768
    },
    "singleProjectMode": true,
    "auth": {
      "port": 9099
    }
  }
}
